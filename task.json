{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build SDL",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/output.exe",
          "-I",
          "C:/SDL2/include",
          "-L",
          "C:/SDL2/lib",
          "-lmingw32",
          "-lSDL2main",
          "-lSDL2"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  